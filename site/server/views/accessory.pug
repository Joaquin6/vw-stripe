extends ./templates/layout

block main
	div#product
		div.header
			- var src = product.logo || "https://placehold.it/320x80"
			img.logo( src=src )
			h1.title #{ product.name }
			div.slider
				each image in product.image.list
					div.slide
						- src = image || "https://placehold.it/320x320"
						img.thumbnail( src=src )
				span.slider-prev Prev
				span.slider-next Next
		div.cta
			span.underline
			h2.title Interested In This Product?
			p.copy Complete the steps below and then add to your cart.
			span.underline
		div#item-selector
			//- - var items = (product.items && product.items.list && product.items.list.length ) ? product.items.list : []
			//- case product.type
			//- 	when "tire"
			//- 		include ./components/product/tire
			//- 	when "wheel"
			//- 		include ./components/product/wheel
			div#props( item=item product=product warehouses=warehouses )